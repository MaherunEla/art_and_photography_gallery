generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Signup {
  id             String     @id @default(uuid())
  name           String
  contact        String
  email          String     @unique
  occupation     String
  role           Role       @default(User)
  password       String
  image          String     @default("/assets/images/home/defaultimage.jpg")
  socialaccountf String     @default("")
  socialaccountl String     @default("")
  createdat      DateTime   @default(now())
  userstatus     Userstatus @default(Active)
  comment        Comment[]
  upload         Upload[]
}

model Upload {
  id            String        @id @default(uuid())
  title         String
  artist        String
  description   String
  image         String
  userEmail     String
  price         Float?
  discount      Float?
  createdAt     DateTime      @default(now())
  category      String
  productstatus Productstatus @default(Notsale)
  cimage        String?
  permission    Permission    @default(Notaccepted)
  comment       Comment[]
  user          Signup        @relation(fields: [userEmail], references: [email])
}

model Frame {
  id          String      @id @default(uuid())
  stockstatus Stockstatus @default(Stock)
  frameimage  String
  framename   String
  frameprice  Float?
  createdAt   DateTime    @default(now())
}

model Order {
  id           String   @id @default(uuid())
  product      Json
  total        Float?
  createdAt    DateTime @default(now())
  formdata     Json
  status       Status   @default(Pending)
  revenue      Float?
  totalrevenue Float?
  userEmail    String
  date         String?
}

model Comment {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  text      String
  userEmail String
  productId String
  product   Upload   @relation(fields: [productId], references: [id])
  user      Signup   @relation(fields: [userEmail], references: [email])
}

enum Role {
  User
  Artist
  Admin
}

enum Userstatus {
  Active
  Inactive
}

enum Status {
  Pending
  InProgress
  Deliverd
  Cancel
}

enum Productstatus {
  Sale
  Notsale
}

enum Permission {
  Accepted
  Notaccepted
}

enum Stockstatus {
  Stock
  OutofStock
}
